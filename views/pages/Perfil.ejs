    <script>
        function editProfile() {
            alert('üöß Funcionalidade de edi√ß√£o de perfil em desenvolvimento!\n\nEm breve voc√™ poder√° atualizar suas informa√ß√µes.');
        }

        function viewTasks() {
            window.location.href = '/listaAtividades';
        }

        function createTask() {
            window.location.href = '/novaAtividade';
        }

        async function logout() {
            if (confirm('Tem certeza que deseja sair da sua conta?')) {
                try {
                    const response = await fetch('/users/logout', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    const data = await response.json();
                    
                    if (data.sucesso) {
                        alert('Logout realizado com sucesso!');
                        window.location.href = '/login';
                    } else {
                        alert('Erro ao fazer logout');
                    }
                } catch (error) {
                    console.error('Erro:', error);
                    alert('Erro ao fazer logout');
                }
            }
        }

        // Exibir informa√ß√µes de sess√£o no console para debug
        console.log('Usu√°rio logado:', {
            id: '<%= user.id %>',
            nome: '<%= user.nome %>',
            email: '<%= user.email %>'
        });
    </script>
