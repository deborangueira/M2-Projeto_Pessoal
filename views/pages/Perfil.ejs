<div class="profile-container">
    <div class="content-wrapper">
        <h1 class="page-title">üë§ Meu Perfil</h1>
        <p class="page-subtitle">Gerencie suas informa√ß√µes pessoais</p>
        
        <div class="profile-card">
            <div class="profile-header">
                <div class="avatar-container">
                    <div class="avatar">
                        <%= user.nome.charAt(0).toUpperCase() %>
                    </div>
                </div>
                <div class="profile-data">
                    <h2><%= user.nome %></h2>
                    <p class="user-email"><%= user.email %></p>
                </div>
            </div>
            
            <div class="profile-info">
                <h3 class="section-title">Informa√ß√µes do <span class="highlight">Usu√°rio</span></h3>
                <div class="info-grid">
                    <div class="info-item">
                        <label>Nome Completo:</label>
                        <span><%= user.nome %></span>
                    </div>
                    <div class="info-item">
                        <label>Email:</label>
                        <span><%= user.email %></span>
                    </div>
                    <div class="info-item">
                        <label>Status:</label>
                        <span class="status-active">Usu√°rio Ativo</span>
                    </div>
                </div>
            </div>
            
            <div class="profile-actions">
                <div class="action-buttons">
                    <button onclick="editProfile()" class="btn btn-primary">
                        üìù Editar Perfil
                    </button>
                    <button onclick="logout()" class="btn btn-danger">
                        üö™ Sair da Conta
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Edi√ß√£o de Perfil -->
    <div id="editProfileModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Editar Perfil</h2>
                <span class="close" onclick="closeEditProfileModal()">&times;</span>
            </div>
            <form id="editProfileForm">
                <div class="form-container">
                    <div class="form-group">
                        <label for="editNome">Nome Completo:</label>
                        <input type="text" id="editNome" name="nome" required maxlength="100">
                        <div class="error-message" id="nomeError"></div>
                    </div>
                    
                    <div class="form-group">
                        <label for="editEmail">Email:</label>
                        <input type="email" id="editEmail" name="email" required maxlength="255">
                        <div class="error-message" id="emailError"></div>
                    </div>
                    
                    <div class="form-group">
                        <label for="editSenha">Nova Senha (opcional):</label>
                        <input type="password" id="editSenha" name="senha" placeholder="Deixe em branco para manter a senha atual">
                        <div class="error-message" id="senhaError"></div>
                    </div>
                </div>
                
                <div class="form-actions">
                    <button type="button" onclick="closeEditProfileModal()" class="btn-cancel">Cancelar</button>
                    <button type="submit" class="btn-save">Salvar Altera√ß√µes</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function editProfile() {
            // Preenche o formul√°rio com os dados atuais do usu√°rio
            document.getElementById('editNome').value = '<%= user.nome %>';
            document.getElementById('editEmail').value = '<%= user.email %>';
            document.getElementById('editSenha').value = '';
            
            // Limpa mensagens de erro
            clearErrorMessages();
            
            // Previne scroll do body
            document.body.classList.add('modal-open');
            
            // Mostra o modal
            document.getElementById('editProfileModal').style.display = 'block';
        }

        function closeEditProfileModal() {
            document.getElementById('editProfileModal').style.display = 'none';
            
            // Restaura scroll do body
            document.body.classList.remove('modal-open');
            
            clearErrorMessages();
        }

        function clearErrorMessages() {
            const errorElements = document.querySelectorAll('.error-message');
            errorElements.forEach(element => element.textContent = '');
        }

        function validateProfileForm() {
            let isValid = true;
            clearErrorMessages();

            const nome = document.getElementById('editNome').value.trim();
            const email = document.getElementById('editEmail').value.trim();
            const senha = document.getElementById('editSenha').value;

            // Valida√ß√£o do nome
            if (!nome) {
                document.getElementById('nomeError').textContent = 'Nome √© obrigat√≥rio';
                isValid = false;
            } else if (nome.length < 3) {
                document.getElementById('nomeError').textContent = 'Nome deve ter pelo menos 3 caracteres';
                isValid = false;
            }

            // Valida√ß√£o do email
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!email) {
                document.getElementById('emailError').textContent = 'Email √© obrigat√≥rio';
                isValid = false;
            } else if (!emailRegex.test(email)) {
                document.getElementById('emailError').textContent = 'Email deve ter um formato v√°lido';
                isValid = false;
            }

            // Valida√ß√£o da senha (opcional)
            if (senha && senha.length < 6) {
                document.getElementById('senhaError').textContent = 'Senha deve ter pelo menos 6 caracteres';
                isValid = false;
            }

            return isValid;
        }

        // Event listener para valida√ß√£o em tempo real
        document.addEventListener('DOMContentLoaded', function() {
            const nomeInput = document.getElementById('editNome');
            const emailInput = document.getElementById('editEmail');
            const senhaInput = document.getElementById('editSenha');

            if (nomeInput) {
                nomeInput.addEventListener('input', function() {
                    const nome = this.value.trim();
                    const errorElement = document.getElementById('nomeError');
                    
                    if (!nome) {
                        errorElement.textContent = 'Nome √© obrigat√≥rio';
                    } else if (nome.length < 3) {
                        errorElement.textContent = 'Nome deve ter pelo menos 3 caracteres';
                    } else {
                        errorElement.textContent = '';
                    }
                });
            }

            if (emailInput) {
                emailInput.addEventListener('input', function() {
                    const email = this.value.trim();
                    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    const errorElement = document.getElementById('emailError');
                    
                    if (!email) {
                        errorElement.textContent = 'Email √© obrigat√≥rio';
                    } else if (!emailRegex.test(email)) {
                        errorElement.textContent = 'Email deve ter um formato v√°lido';
                    } else {
                        errorElement.textContent = '';
                    }
                });
            }

            if (senhaInput) {
                senhaInput.addEventListener('input', function() {
                    const senha = this.value;
                    const errorElement = document.getElementById('senhaError');
                    
                    if (senha && senha.length < 6) {
                        errorElement.textContent = 'Senha deve ter pelo menos 6 caracteres';
                    } else {
                        errorElement.textContent = '';
                    }
                });
            }
        });

        // Event listener para o formul√°rio de edi√ß√£o de perfil
        document.getElementById('editProfileForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            if (!validateProfileForm()) {
                return;
            }

            if (!confirm('Tem certeza que deseja salvar as altera√ß√µes no seu perfil?')) {
                return;
            }

            const formData = new FormData(e.target);
            const profileData = {
                nome: formData.get('nome'),
                email: formData.get('email'),
                senha: formData.get('senha') || undefined
            };

            // Remove senha se estiver vazia
            if (!profileData.senha) {
                delete profileData.senha;
            }

            try {
                const response = await fetch(`/users/<%= user.id %>`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(profileData)
                });

                const data = await response.json();

                if (response.ok && data.sucesso) {
                    closeEditProfileModal();
                    alert('Perfil atualizado com sucesso!');
                    
                    // Atualizar os dados na tela
                    document.querySelector('.perfilDados h2').textContent = data.user.nome;
                    document.querySelector('.userEmail').textContent = data.user.email;
                    document.querySelector('.infoItem:nth-child(1) span').textContent = data.user.nome;
                    document.querySelector('.infoItem:nth-child(2) span').textContent = data.user.email;
                    document.querySelector('.avatar').textContent = data.user.nome.charAt(0).toUpperCase();
                    
                } else {
                    if (response.status === 401) {
                        alert('Sess√£o expirada. Fa√ßa login novamente.');
                        window.location.href = '/login';
                    } else if (response.status === 403) {
                        alert('Acesso negado: voc√™ s√≥ pode editar seu pr√≥prio perfil.');
                    } else {
                        alert(`Erro ao atualizar perfil: ${data.error || 'Erro desconhecido'}`);
                    }
                }
            } catch (error) {
                console.error('Erro:', error);
                alert('Erro de conectividade. Verifique sua conex√£o e tente novamente.');
            }
        });

        async function logout() {
            if (confirm('Tem certeza que deseja sair da sua conta?')) {
                try {
                    const response = await fetch('/users/logout', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    const data = await response.json();
                    
                    if (data.sucesso) {
                        alert('Logout realizado com sucesso!');
                        window.location.href = '/login';
                    } else {
                        alert('Erro ao fazer logout');
                    }
                } catch (error) {
                    console.error('Erro:', error);
                    alert('Erro ao fazer logout');
                }
            }
        }

        // Fechar modal ao clicar fora dele
        window.addEventListener('click', (event) => {
            const modal = document.getElementById('editProfileModal');
            if (event.target === modal) {
                closeEditProfileModal();
            }
        });

        // Fechar modal com tecla ESC
        window.addEventListener('keydown', (event) => {
            if (event.key === 'Escape') {
                const modal = document.getElementById('editProfileModal');
                if (modal.style.display === 'block') {
                    closeEditProfileModal();
                }
            }
        });

        // Exibir informa√ß√µes de sess√£o no console para debug
        console.log('Usu√°rio logado:', {
            id: '<%= user.id %>',
            nome: '<%= user.nome %>',
            email: '<%= user.email %>'
        });
    </script>
    </div>
</div>