<div class="new-activity-container">
    <div class="content-wrapper">
        <div class="card">
            <form action="/task" method="POST" class="form-container">
                <div class="form-group">
                    <label for="título">Título da Atividade</label>
                    <input type="text" name="título" id="título" placeholder="Digite o título da atividade" required>
                </div>
                
                <div class="form-group">
                    <label for="descricao">Descrição</label>
                    <input type="text" name="descricao" id="descricao" placeholder="Descreva a atividade" required>
                </div>
                
                <div class="form-group">
                    <label for="prazo">Data de Vencimento</label>
                    <input type="date" name="prazo" id="prazo" required>
                </div>
                
                <div class="form-group">
                    <label for="prioridade">Prioridade</label>
                    <select name="prioridade" id="prioridade" required>
                        <option value="">Selecione a prioridade</option>
                        <option value="baixa">Baixa</option>
                        <option value="media">Média</option>
                        <option value="alta">Alta</option>
                        <option value="urgente">Urgente</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="concluido">Status</label>
                    <select name="concluido" id="concluido" required>
                        <option value="">Selecione o status</option>
                        <option value="false">Pendente</option>
                        <option value="true">Concluída</option>
                    </select>
                </div>
                
                <input type="hidden" name="criado_em" id="criado_em">
                
                <button type="submit" class="btn btn-primary btn-full">✅ Adicionar Atividade</button>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('criado_em').value = new Date().toISOString();
    </script>
</div>